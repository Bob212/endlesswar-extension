{
  "name": "EndlessWar extension",
  "version": "1",
  "description": "Build an Extension!",
  "manifest_version": 2,
  // "page_action": {
    // "default_popup": "popup.html",
    // "default_icon": {
    //   "48": "swords-48.png",
    //   "128": "swords-128.png"
    // }
  // },
  "browser_action": {},
  "permissions": [
    "declarativeContent",
    "storage",
    "activeTab",
    "cookies",
    "tabs",
    "*://*.endlesswar.ru/"
  ],
  "background": {
    "scripts": ["./src/background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["*://*.endlesswar.ru/*"],
    "js": ["./dist/content.js"],
    "run_at": "document_start"
  }],
  "icons": {
    "48": "./images/swords-48.png",
    "128": "./images/swords-128.png"
  }
}